					"name": "1. Simple Credit Card Sale - Visa",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Parse the URL-encoded response",
									"const responseText = pm.response.text();",
									"const params = new URLSearchParams(responseText);",
									"",
									"// Check if transaction was approved",
									"pm.test(\"Transaction approved\", function () {",
									"    pm.expect(params.get('response')).to.equal('1');",
									"});",
									"",
									"// Store transaction ID for later use",
									"if (params.get('transactionid')) {",
									"    pm.collectionVariables.set('transaction_id', params.get('transactionid'));",
									"}",
									"",
									"// Log response details",
									"console.log('Response:', params.get('responsetext'));",
									"console.log('Transaction ID:', params.get('transactionid'));",
									"console.log('Auth Code:', params.get('authcode'));"
